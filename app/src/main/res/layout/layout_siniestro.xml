<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#088500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16px"
        android:layout_marginStart="16px"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:layout_marginEnd="16px"
        android:layout_marginRight="16px"
        android:layout_marginBottom="16px"
        android:layout_weight="0.6"
        android:background="#C8FBB3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITULO"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FECHA"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/item_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DESCRIPCION"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/item_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UbicaciÃ³n"
                android:textAlignment="center"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/item_mapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver en el Mapa" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>